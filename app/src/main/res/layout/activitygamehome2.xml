<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.justingil1748.mobivity.Game2HomeActivity">

    <NumberPicker
        android:id="@+id/dp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/np2"
        android:layout_alignBottom="@+id/np2"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Mobivity Game 2"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="106dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:id="@+id/np1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <NumberPicker
        android:id="@+id/np2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/np1"
        android:layout_alignBottom="@+id/np1"
        android:layout_toEndOf="@+id/np1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Position"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Direction"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/button4"
        android:layout_marginStart="18dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Position"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/np1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <NumberPicker
        android:id="@+id/targetNp1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="22dp" />

    <NumberPicker
        android:id="@+id/dp2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/targetNp2"
        android:layout_alignBottom="@+id/targetNp2"
        android:layout_alignStart="@+id/textView11" />

    <NumberPicker
        android:id="@+id/targetNp2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/targetNp1"
        android:layout_alignBottom="@+id/targetNp1"
        android:layout_toEndOf="@+id/targetNp1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Direction"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/targetNp1"
        android:layout_below="@+id/targetNp1"
        android:layout_marginTop="38dp"
        android:text="Maximum actions allowed" />

    <NumberPicker
        android:id="@+id/maxActionNp"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />
</RelativeLayout>